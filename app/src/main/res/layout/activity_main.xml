<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALCULA TU EDAD!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.08"
            android:id="@+id/txtTitulo" android:textSize="24sp" android:textColor="@color/colorAccent"/>
    <EditText
            android:layout_width="241dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/txtAnioNacimiento" android:hint="aÃ±o de nacimiento(ej:2000)"
            android:textColor="@color/colorAccent" android:layout_marginTop="112dp"
            app:layout_constraintTop_toBottomOf="@+id/txtTitulo" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="99dp" android:layout_marginRight="99dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="99dp"
            android:layout_marginStart="99dp"/>
    <TextView
            android:text="te dire tu edad!"
            android:layout_width="191dp"
            android:layout_height="112dp"
            android:id="@+id/txtVistaEdad" android:textSize="24sp"
            android:layout_marginTop="72dp" app:layout_constraintTop_toBottomOf="@+id/txtAnioNacimiento"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="110dp"
            android:layout_marginRight="110dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="110dp" android:layout_marginStart="110dp"/>
    <Button
            android:text="CALCULAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botonCalcular" android:onClick="calcularEdad"
            android:background="@color/colorAccent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="68dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp" android:layout_marginRight="56dp"/>

</android.support.constraint.ConstraintLayout>